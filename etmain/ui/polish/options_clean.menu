#include "ui/menudef.h"
#include "ui/menumacros.h"

// Defines //
#define WINDOW_X        0
#define WINDOW_Y        0
#define WINDOW_WIDTH    640
#define WINDOW_HEIGHT   480
#define GROUP_NAME      "grpClean"

// Quit Menu //
menuDef {
	name        "options_clean"
	visible     0
	fullscreen  0
	rect WINDOW_X WINDOW_Y WINDOW_WIDTH WINDOW_HEIGHT
	style WINDOW_STYLE_FILLED
	popup

	fadeClamp   0.5
	fadeAmount  0.075

	onOpen {
		setitemcolor background backcolor 0 0 0 0 ;
		fadein                  background
	}

	onESC {
		close options_clean ;
	}

// Background //
	itemDef {
		name        "background"
		rect        0 0 640 480
		style WINDOW_STYLE_FILLED
		background  "ui/assets/fadebox.tga"
		backcolor   0 0 0 0
		visible     1
		decoration
	}

// Subwindows //
#define SUBWINDOW_WIDTH     400
#define SUBWINDOW_HEIGHT    160
#define SUBWINDOW_X         .5 * (WINDOW_WIDTH - SUBWINDOW_WIDTH)
#define SUBWINDOW_Y         .5 * (WINDOW_HEIGHT - SUBWINDOW_HEIGHT)

	SUBWINDOWBLACK(SUBWINDOW_X, SUBWINDOW_Y, SUBWINDOW_WIDTH, SUBWINDOW_HEIGHT, "CZYSCZENIE HOMEPATH")
	LABEL(SUBWINDOW_X + 2, SUBWINDOW_Y + 16, (SUBWINDOW_WIDTH)-4, 10, "To usunie wszystkie niepotrzebne pliki", .2, ITEM_ALIGN_CENTER, .5 * ((SUBWINDOW_WIDTH)-4), 8)
	LABEL(SUBWINDOW_X + 2, SUBWINDOW_Y + 40, (SUBWINDOW_WIDTH)-4, 10, "Proste czyszczenie usunie .tmp i niestandarowe pliki .pk3.", .2, ITEM_ALIGN_CENTER, .5 * ((SUBWINDOW_WIDTH)-4), 8)
	LABEL(SUBWINDOW_X + 2, SUBWINDOW_Y + 56, (SUBWINDOW_WIDTH)-4, 10, "Pelne czyszczenie usunie wszyscie sciagniete pliki take jak mapy, kampanie i niestandardowe pliki .pk3. ", .2, ITEM_ALIGN_CENTER, .5 * ((SUBWINDOW_WIDTH)-4), 8)
	LABEL(SUBWINDOW_X + 2, SUBWINDOW_Y + 90, (SUBWINDOW_WIDTH)-4, 10, "^3UWAGA: Uzyj tego pod wlasnym ryzykiem!", .2, ITEM_ALIGN_CENTER, .5 * ((SUBWINDOW_WIDTH)-4), 8)
	LABEL(SUBWINDOW_X + 2, SUBWINDOW_Y + 106, (SUBWINDOW_WIDTH)-4, 10, "Skonsultuj sie na wiki dla dokumentacji.", .2, ITEM_ALIGN_CENTER, .5 * ((SUBWINDOW_WIDTH)-4), 8)
	LABEL(SUBWINDOW_X + 2, SUBWINDOW_Y + 122, (SUBWINDOW_WIDTH)-4, 10, "Nadus 'PRZERWIJ' jesli nie wiesz co robisz tutaj.", .2, ITEM_ALIGN_CENTER, .5 * ((SUBWINDOW_WIDTH)-4), 8)

	BUTTON(SUBWINDOW_X + 6, SUBWINDOW_Y + SUBWINDOW_HEIGHT - 24, .33 * (SUBWINDOW_WIDTH - 18), 18, "PRZERWIJ", .3, 14, close options_clean ; open options)
	BUTTON(SUBWINDOW_X + 6 + .33 * (SUBWINDOW_WIDTH - 18) + 6, SUBWINDOW_Y + SUBWINDOW_HEIGHT - 24, .33 * (SUBWINDOW_WIDTH - 18), 18, "PROSTE", .3, 14, exec "exec clean_simple.cfg" ; close options_clean ; open options)
	BUTTON(SUBWINDOW_X + 6 + .33 * (SUBWINDOW_WIDTH - 18) + 6 + .33 * (SUBWINDOW_WIDTH - 24) + 6, SUBWINDOW_Y + SUBWINDOW_HEIGHT - 24, .33 * (SUBWINDOW_WIDTH - 18), 18, "PELNE", .3, 14, exec "exec clean_full.cfg" ; close options_clean ; open options)
}

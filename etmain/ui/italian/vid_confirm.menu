#include "ui/menudef.h"
#include "ui/menumacros.h"

// Defines //
#define WINDOW_X		0
#define WINDOW_Y		0
#define WINDOW_WIDTH	640
#define WINDOW_HEIGHT	480
#define GROUP_NAME		"grpVidConfirm"
		
// Confirm Video Mode Menu //
menuDef
{
	name		"vid_confirm"
	visible		0
	fullscreen	0
	rect		WINDOW_X WINDOW_Y WINDOW_WIDTH WINDOW_HEIGHT
	style		WINDOW_STYLE_FILLED
	popup
	modal
	
	fadeClamp	0.5
	fadeAmount  0.075
	
	onOpen
	{
		setitemcolor background backcolor 0 0 0 0 ;
		fadein background
	}
	
	onESC
	{
		uiScript VidReset ;
		exec "vid_restart" 
	}
	
	// after 15 seconds, reset to previous video mode
	onTimeout 15000
	{
		uiScript VidReset ;
		exec "vid_restart" 
	}
	
// Background //
	itemDef {
		name		"background"
		rect		0 0 640 480
		style		WINDOW_STYLE_FILLED
		background	"ui/assets/fadebox.tga"
		backcolor	0 0 0 0
		visible		1
		decoration
	}

// Subwindows //
#define SUBWINDOW_WIDTH		216
#define SUBWINDOW_HEIGHT	96
#define SUBWINDOW_X			.5 * (WINDOW_WIDTH - SUBWINDOW_WIDTH)
#define SUBWINDOW_Y			.5 * (WINDOW_HEIGHT - SUBWINDOW_HEIGHT)

	SUBWINDOWBLACK( SUBWINDOW_X, SUBWINDOW_Y, SUBWINDOW_WIDTH, SUBWINDOW_HEIGHT, "CONFERMA CAMBIO MODALITA' VIDEO" )
    
    LABEL( SUBWINDOW_X+2, SUBWINDOW_Y+16, (SUBWINDOW_WIDTH)-8, 10, "Uso questa modalita' video?", .2, ITEM_ALIGN_CENTER, .5*((SUBWINDOW_WIDTH)-4), 8 )
	LABEL( SUBWINDOW_X+2, SUBWINDOW_Y+28, (SUBWINDOW_WIDTH)-8, 10, "Torno alla precedente", .2, ITEM_ALIGN_CENTER, .5*((SUBWINDOW_WIDTH)-4), 8 )
    
    itemDef {
		name			"labelConfirmCounter"
      	group			GROUP_NAME
		rect			$evalfloat(SUBWINDOW_X+2) $evalfloat( SUBWINDOW_Y+40) $evalfloat((SUBWINDOW_WIDTH)-8) $evalfloat(10)
		type			ITEM_TYPE_TIMEOUT_COUNTER
		text			"imposto in %s secondi..."
		textfont		UI_FONT_COURBD_21
		textstyle		ITEM_TEXTSTYLE_SHADOWED
		textscale		.2
		textalign		ITEM_ALIGN_CENTER
		textalignx		$evalfloat(.5*((SUBWINDOW_WIDTH)-4))
		textaligny		8
		forecolor		.6 .6 .6 1
		visible			1
		decoration
    }
	
#ifdef FUI
	BUTTON( SUBWINDOW_X+6, SUBWINDOW_Y+SUBWINDOW_HEIGHT-24, .5*(SUBWINDOW_WIDTH-18), 18, "SI", .3, 14, uiScript vidConfirm ; close vid_confirm ; open main )
#else
	BUTTON( SUBWINDOW_X+6, SUBWINDOW_Y+SUBWINDOW_HEIGHT-24, .5*(SUBWINDOW_WIDTH-18), 18, "SI", .3, 14, uiScript vidConfirm ; close vid_confirm ; open ingame_main )
#endif // FUI

	BUTTON( SUBWINDOW_X+6+.5*(SUBWINDOW_WIDTH-18)+6, SUBWINDOW_Y+SUBWINDOW_HEIGHT-24, .5*(SUBWINDOW_WIDTH-18), 18, "NO", .3, 14, uiScript vidReset ; exec "vid_restart" )
}
